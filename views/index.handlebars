<div class="container bg">
	

	        <h1>Eat-Da-Burger App</h1>
				

<div class="container">
	
	    <div class="Not-eaten">

			<br>
			<h2>Burgers Available To Eat!</h2>
			

			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}
                    
			     <button class="devour" id="eat" data-id="{{this.id}}">DEVOUR IT!</button>
                  
			      </li>
			    {{/unless}}
			  {{/each}}
			</ul>

	    </div>

	    <div class="Ate-list">

			<h2>Burgers That Have Been Eaten!</h2>
			
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			      </li>
			    {{/if}}
			  {{/each}}
			
	    </div>

	<!-- end .row -->



			

			<form class="create-update-form" action="/" method="POST">
				<h2>Add A Burger!</h2>
			  <div class="form-group">
			    <p id="enter">Enter a burger you want to order and click the Submit Order button.</p>
			    <input type="text" id="ca" name="burger_name">
			  </div>
			  
			  <button class="btn-primary" id="but" type="submit">Submit Order</button>
			</form>

	    </div>
	
  	</div>
	<!-- end .row -->

</div>
</div>
<script>
        $(".devour").on("click", function(event){
            event.preventDefault();

            var id = $(this).data("id");
            var Devstate = {
                devoured: true
            };

            $.ajax("/" + id, {
                method: "PUT",
                data: Devstate

            }).then(function(){
                console.log("changed the devState to " + Devstate.devoured)
               
            })
             location.reload();
        })
</script>